<Layout title="Contact | EI">
    <div class="flex justify-center p-[8vw] items-end bg-[url('/src/images/contact-banner.webp')] h-[50vh] bg-cover bg-no-repeat bg-[top_right_-30rem] md:bg-right">
        <div class="text-center">
            <h1 class="text-4xl md:text-6xl font-semibold text-white leading-10 md:leading-[5rem]">We Appreciate Your Interest In Emirates Infotech..!</h1>
            <p class="text-white text-xl md:text-4xl font-thin mt-4 mb-8 md:mb-0">Let's Have A Discussion.</p>
            <!-- <div class="hover:scale-110 transition ease-in-out duration-300">
                <a class="text-4xl text-[#f1f1f1] " href="mailto:info@emiratesinfotech.com"><i class="fa-solid fa-envelope"></i></a>
            </div> -->
        </div>
    </div>
    <div class="text-[#ff0000] text-end pr-6 mt-8"> * Required fields</div>
    <div class="flex flex-col lg:flex-row items-center justify-center text-center py-12 md:gap-8 lg:gap-12 2xl:gap-20" id="form">
        <div class="max-w-[24rem]">
            <h4 class=" text-[1.7rem] md:text-3xl font-semibold mb-3">Weâ€™ve helped <br>
                DHL, Henkel, Kaiser
                and Republic Services</h4>
            <p class="px-8 mb-5 text-xl font-thin">in their digital transformation journey that align
                with their business objectives.</p>
        </div>
        <form class="text-[#04599f]" action="https://api.web3forms.com/submit" method="POST">
            <input type="hidden" name="access_key" value="df3c9ed3-bba4-484e-aec7-26999f075f08">
        
            <div class="flex flex-col gap-4 mt-5 px-4">
                <div class="flex flex-col md:flex-row gap-4">
                    <div class="flex text-start flex-col">
                        <label class="font-semibold mb-1" for="firstname">First Name <span class="text-[#ff0000]">*</span></label>
                        <input placeholder="eg. John" class="rounded w-[84vw] md:w-72 border-1 border-[#b7b7b7]" type="text" name="firstname" id="firstname" required>
                    </div>
                    <div class="flex text-start flex-col">
                        <label class="font-semibold mb-1" for="lastname">Last Name <span class="text-[#ff0000]">*</span></label>
                        <input placeholder="eg. Webb" class="rounded w-[84vw] md:w-72 border-1 border-[#b7b7b7]" type="text" name="lastname" id="lastname" required>
                    </div>
                </div>
                <div class="flex flex-col md:flex-row gap-4">
                    <div class="flex text-start flex-col">
                        <label class="font-semibold mb-1" for="email">Email <span class="text-[#ff0000]">*</span></label>
                        <input placeholder="eg. abc@gmail.com" class="rounded w-[84vw] md:w-72 border-1 border-[#b7b7b7]" type="email" name="email" id="email" required>
                    </div>
                    <div class="flex text-start flex-col">
                        <label class="font-semibold mb-1" for="phone">Phone <span class="text-[#ff0000]">*</span></label>
                        <input placeholder="eg. +973 87654321" class="rounded w-[84vw] md:w-72 border-1 border-[#b7b7b7]" type="tel" name="phone" id="phone">
                    </div>
                </div>
            </div>
            <div class="flex flex-col px-4 mt-4">
                <label class="font-semibold text-start mb-1" for="message">Message <span class="text-[#ff0000]">*</span></label>
                <textarea rows="4" class="px-3 py-2 rounded border-1 border-[#b7b7b7]" name="message" id="message" required placeholder="Message"></textarea>
            </div>
            <input type="hidden" name="redirect" value="https://web3forms.com/success">
        
            <button class="mx-auto px-7 w-[84vw] md:w-80 mt-8 rounded py-3 block text-center bg-[#ff0000] text-white" type="submit">SEND <i class="ml-2 fa-solid fa-paper-plane"></i></button>
        
        </form>
    </div>
    <div class="bg-[#303030] py-8 md:py-16 mt-4">
        <h4 class="text-2xl md:text-3xl mb-8 font-bold text-[#fff] max-w-[1200px] mx-auto px-8">OUR LOCATIONS</h4>
        <div class="lg:border-4 border-[#f2f2f2] max-w-[1200px] mx-auto px-8 bg-[url('/src/images/map.png')] bg-center h-[30vh] md:h-[60vh] bg-no-repeat bg-cover"></div>
