---
const {
    imgUrl, 
    heading, 
    subHeading, 
    text, 
    bg = 'bg-[#fff]', 
    darken = ''} = Astro.props
---

<div class={`${bg} flex flex-col items-center justify-center py-12 lg:py-16`}>
    <div class="text-center px-8">
        <h3 class="text-3xl font-bold tracking-wider mb-4">{heading}</h3>
        <p class="text-lg font-semibold italic text-[#222]">{subHeading}</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 w-full md:w-5/6 lg:w-4/6 md:h-5/6 p-[5vw]">
        <div class={` ${imgUrl.one} ${darken} rounded-xl text-white h-60 flex justify-end items-end bg-[#0005]`}>
            <p class="text-2xl font-semibold w-40 mr-4 mb-4">{text.one}</p>
        </div>
        <div class={` ${imgUrl.two} ${darken} rounded-xl text-white h-60 flex justify-end items-end bg-[#0005]`}>
            <p class="text-2xl font-semibold w-40 mr-4 mb-4">{text.two}</p>
        </div>
        <div class={` ${imgUrl.three} ${darken} rounded-xl text-white h-60 flex justify-end items-end bg-[#0005]`}>
            <p class="text-2xl font-semibold w-40 mr-4 mb-4">{text.three}</p>
        </div>
        <div class={` ${imgUrl.four} ${darken} rounded-xl text-white h-60 flex justify-end items-end bg-[#0005]`}>
            <p class="text-2xl font-semibold w-40 mr-4 mb-4">{text.four}</p>
        </div>
    </div>
</div>